<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BlackGameActivity">

    <!-- Abre Primera fila Linear -->
    <LinearLayout
        android:id="@+id/fila1"

        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="50"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="cajaSeleccionada"
            android:id="@+id/caja1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/minaranja"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:onClick="cajaSeleccionada"
            android:id="@+id/caja2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/miazul"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>
    <!-- Cierra Primera fila -->

    <!-- Abre Segunda fila Linear -->
    <LinearLayout
        android:id="@+id/fila2"

        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="50"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="cajaSeleccionada"
            android:id="@+id/caja3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/miverde"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:onClick="cajaSeleccionada"
            android:id="@+id/caja4"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/mirojo"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>
    <!-- Cierra Segunda fila -->

</LinearLayout>